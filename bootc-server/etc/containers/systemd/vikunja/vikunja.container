[Unit]
Description=Vikunja Container

[Container]
Pod=vikunja.pod
ContainerName=vikunja
Image=docker.io/vikunja/vikunja:latest
AutoUpdate=registry
Volume=vikunja_files.volume:/app/vikunja/files
Volume=vikunja_db.volume:/db
Environment=VIKUNJA_SERVICE_PUBLICURL=https://vikunja.example.com/
Environment=VIKUNJA_DATABASE_PATH=/db/vikunja.db
Environment=VIKUNJA_SERVICE_TIMEZONE='Europe/Tallinn'
Environment=VIKUNJA_SERVICE_JWTSECRET=''

[Service]
Restart=always
TimeoutStartSec=90

[Install]
WantedBy=multi-user.target default.target
